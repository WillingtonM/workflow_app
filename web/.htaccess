<IfModule mod_rewrite.c>
  RewriteEngine On

  RewriteCond %{REQUEST_URI} !\.(?:css|js|jpe?g|png|gif|svg|map|ttf|xml|txt|pdf|doc|docx|xlsx|xls|csv)$ [NC]
  RewriteRule (.*) index.php?url=$1 [L]
</IfModule>

# Protect .htaccess file
<Files ~"^.*\.([Hh][Tt][Aa])">
  order allow,deny
  deny from all
  satisfy all
</Files>
